{% extends '@EvotodiLogViewer/base_content.html.twig' %}
{% block content_body %}
<table class="table table-bordered">
    <tr>
        <th colspan="2">
            <a href="/">Home</a>
        </th>
    </tr>
    {% for log in logs %}
        <tr>
            <td>
                <a href="{{ url('_log_viewer_viewer') }}?name={{ log.name|url_encode }}&log={{ log.path|url_encode }}&pattern={% if log.pattern is empty %}null{% else %}{{ log.pattern|url_encode }}{% endif %}&days={{ log.days }}">
                    {{ log.name }}
                </a>
            </td>
            <td>
                <a href="{{ url('_log_viewer_viewer') }}?log={{ log.path|url_encode }}&delete=true">
                    delete
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
{% endblock %}
